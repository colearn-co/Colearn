    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    <% end %>
  })();

</script>
	
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<script src="https://use.fontawesome.com/f9b4728164.js"></script>
<script src="https://cdn.jsdelivr.net/emojione/2.2.7/lib/js/emojione.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/emojione/2.2.7/assets/css/emojione.min.css"/>
 
	<script type="text/javascript">
		<% if (current_user) %>
			current_user = <%= raw current_user.as_json.to_json %>
		<% end %>
		<% if flash[:notice] %>
			jQuery(document).ready(function() {
				$.notify("<%= escape_javascript flash[:notice] %>", { position:"top center", className: "info" });
			});
		<% end %>
	</script>
	<script>
	  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
	  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
	  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

	  ga('create', 'UA-87696038-1', 'auto');
	  ga('send', 'pageview');

	</script>    
	<%= csrf_meta_tags %>
	<%= yield(:head) %>

	<title>Colearn</title>
</head>
<body style="background: #e9eaec none repeat scroll 0 0;">

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<div class="header " style="background-color: rgb(21, 11, 48);">
    <a class="logo" href="/" style="padding: 0px;">
        <img class="logo-image" src="<%= asset_path('colearn-logo.png') %>" style="max-width: 152px; border-radius: 17px;">
    	<span style="color: white; padding: 14px 12px; font-size: 19px;">Find people to learn with</span>
    </a>
    <% if current_user %>
        <div class="account-area">
            <div class="username" >
                <a href="javascript:void(0)" class="username-text"><%=current_user.name%></a>
            </div>
            <div class="account">
               <%= gravatar_tag current_user.email, :d => :monsterid, :html => {:style => "height: 30px; width: 30px; border-radius: 20px;"} %>
              
                <a  href="<%= destroy_user_session_path %>" data-method="DELETE", class="signout btn">Signout</a>
            </div>
        </div>
    <% else %>
    	 <div class="account-action">
            <a href="javascript:void(0)"  class="login btn">Sign in</a>
            
            <a href="javascript:void(0)" class="sign-up btn btn-success" >Sign up</a>
        </div>
    	<a class="signout hidden" href="#" onclick="signOut();">Sign out</a>
    <% end %>   


   
       
</div>
<div class="content">
	<%= yield %>
	
	<div class="popup-box chat-popup" id="chat_div">
    		  
    </div>	
</div>



    	<% if !current_user %> 
    		<div class="modal fade" id="login-div" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
              	<div class="modal-dialog modal-sm" role="document">
                	<div class="modal-content">
                  		<div class="modal-header">
                    		<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    		<h4 class="modal-title" id="myModalLabel">Sign in/ Sign up</h4>
                  		</div>
                  		<div class="modal-body">
                    		<div class="row text-center">
	        
						        <h6>Hi there! Let's start with signing you in.</h6>
						        <a href="<%= user_google_oauth2_omniauth_authorize_path() %>" id="google-login-but">
						        	<img src="<%= asset_path('google-login.png') %>" style="max-width: 100%; border-radius: 25px;">
						        </a>
						        <a href="<%= user_facebook_omniauth_authorize_path %>" id="fb-login-but">
						        	<img src="<%= asset_path('fb-login.png') %>" style="max-width: 100%; border-radius: 25px;">
						        </a>
					    	</div>
					    </div>
				    	<div class="modal-footer">
                			<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              			</div>
            			
          			</div>
        		</div>
        	</div>
        <% end %>




<!-- loader modal -->

<div id="divLoading"> 
</div>

<hr>
<div class="footer">
	<div class="footer-content">
		<a href="mailto:colearn.xyz@gmail.com">Contact Us</a>
    <a href="https://medium.com/@colearn.xyz/find-people-to-learn-with-colearn-bbfa6b7f7570#.9zz4p95jq">Blog</a>
    <a href="https://www.facebook.com/Colearn-1687951258182766">Facebook</a>
	</div>

</div>

<script type="text/javascript">
        $('.login').click(function() {
            $('#login-div').modal('show');
        });
        $('.sign-up').click(function() {
            $('#login-div').modal('show');
        });

        $('.ajax-loader').click(function() {
        	$("div#divLoading").addClass('show');
        })

		$( document ).ajaxComplete(function( event, xhr, settings ) {
			if(xhr.status == 401){
				$('#login-div').modal('show');
			}
			$("div#divLoading").removeClass('show');
		});
		$('#login-div').on('hidden.bs.modal', function () {
				_gaq.push(['_trackEvent', 'Login', 'closed']);			
			});
		$('#login-div').on('show.bs.modal', function () {
				_gaq.push(['_trackEvent', 'Login', 'show']);			
			});
     $(".login").click(function(event) {
        // console.log("clicked on login");
        ga("send", "event","Login/signup", "login", location.pathname);
     });
     $(".sign-up").click(function(event) {
        // console.log("clicked on signup");
        ga("send", "event", "Login/signup", "signup", location.pathname);
     });
     $(".signout").click(function(event) {
        // console.log("clicked on signout");
        ga("send", "event", "Login/signup", "signout", location.pathname);
     });      
    </script>

    <% if !mobile_device? %>
      <script type="text/javascript">
        $(document).ready(function () {
      //set up some minimal options for the feedback_me plugin
          fm_options = {
              bootstrap: true,
              position: "right-bottom",
              name_required: false,
              message_required: true,
              message_placeholder: "Go ahead, type your feedback here...",
              feedback_url: "feedback",
              delayed_options: {
                  success_color: "#5cb85c",
                  fail_color: "#d2322d",
                  delay_success_milliseconds: 3500,
                  send_success : "Thanks for your feedback :)"
              }
          };
       
          //init feedback_me plugin
          fm.init(fm_options);
          $('.feedback_me_form > ul > li').first().hide();
           
      });
      </script>
    <% end %>
</body>
</html>
