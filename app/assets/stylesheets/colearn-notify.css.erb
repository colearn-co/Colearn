#colearn-notice {
    position: fixed;
    top: 0;
    z-index: 1111;
    width: 100%;
    text-align: center;
    vertical-align: middle;
    padding: 10px 28px;
    background: #d8a003;
    font-weight: bold;
    color: white;
 }

 #colearn-notice .notice-rem {
 	position: absolute;
    right: 6px;
    cursor: pointer;
    line-height: 0;
    font-size: 20px;
    top: 50%;
 }
 #colearn-notice .colearn-notice-text a {
 	color: white;
 	text-decoration: underline;
 }